<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screens.SimulationFragment" >
    <data>
        <variable
            name="simulationViewModel"
            type="com.idplus.flyco2tracker.model.SimulationViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/icon_plane_take_off"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/ic_plane_take_off" />

            <AutoCompleteTextView
                android:id="@+id/auto_complete_airport_from"
                android:layout_width="315dp"
                android:layout_height="64dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:dropDownWidth="300dp"
                android:hint="@string/label_hint_departure"
                android:singleLine="true"
                android:text="" />

            <Button
                android:id="@+id/btn_clear_airport_from"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/ic_baseline_close_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/icon_plane_land"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/ic_plane_land" />

            <AutoCompleteTextView
                android:id="@+id/auto_complete_airport_to"
                android:layout_width="315dp"
                android:layout_height="64dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:dropDownWidth="300dp"
                android:hint="@string/label_hint_arrival"
                android:singleLine="true"
                android:text="" />

            <Button
                android:id="@+id/btn_clear_airport_to"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/ic_baseline_close_24" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggle_grp_return_flight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="12dp"
            app:checkedButton="@+id/btn_one_way"
            app:singleSelection="true" >

            <Button
                android:id="@+id/btn_one_way"
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_weight="1"
                android:text="@string/btn_toggle_one_way"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btn_return"
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_weight="1"
                android:text="@string/btn_toggle_return_trip"
                android:textSize="18sp" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggle_grp_comfort_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="10dp"
            app:checkedButton="@+id/btn_class_economy"
            app:singleSelection="true" >

            <Button
                android:id="@+id/btn_class_economy"
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_weight="1"
                android:text="@string/btn_toggle_economy"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_class_business"
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_weight="1"
                android:text="@string/btn_toggle_business"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_class_comfort"
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_weight="1"
                android:text="@string/btn_toggle_comfort"
                android:textSize="18sp" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <TextView
            android:id="@+id/distance_value_km"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:textSize="26sp"
            android:text="@{@string/distance_in_kms(simulationViewModel.distanceValueKm)}" />

        <Button
            android:id="@+id/btn_compute_footprint"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/btn_calculate_footprint"
            android:textSize="24sp" />

    </LinearLayout>
</layout>